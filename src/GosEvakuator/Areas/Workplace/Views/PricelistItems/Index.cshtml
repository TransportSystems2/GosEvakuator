@model IEnumerable<GosEvakuator.Models.PricelistItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Alias)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LockedWheel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LockedSteeringWheel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LoadingVehicle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PerKilometer)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LockedWheel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LockedSteeringWheel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoadingVehicle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerKilometer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
